<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Order History</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.4.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <link href="/styles.css" rel="stylesheet" />
</head>
<body class="bg-light">

  <nav class="navbar navbar-dark bg-dark mb-4 px-4">
    <span class="navbar-brand mb-0 h1">ðŸ“¦ Order History</span>
    <form method="post" action="/logout" class="d-flex">
      <button class="btn btn-outline-light btn-sm">
        <i class="fas fa-sign-out-alt"></i> Logout
      </button>
    </form>
  </nav>

  <div class="container">
    <div class="card shadow-sm">
      <div class="card-header bg-secondary text-white">
        <h4 class="mb-0"><i class="fas fa-clock-rotate-left"></i> Past Orders</h4>
      </div>
      <div class="card-body">
        <table class="table table-striped align-middle">
          <thead class="table-dark">
            <tr>
              <th>ID</th>
              <th>Date</th>
              <th>Total (AUD)</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(o => { %>
              <tr>
                <td><i class="fas fa-receipt me-1 text-muted"></i> <%= o.id %></td>
                <td><%= o.createdAt.toISOString().slice(0,10) %></td>
                <td class="text-success fw-bold">$<%= o.total.toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</body>
</html>