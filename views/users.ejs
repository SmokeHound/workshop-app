<h2>Manage Users</h2>
<table class="table">
  <thead><tr><th>ID</th><th>Username</th><th>Admin</th><th>Actions</th></tr></thead>
  <tbody>
    <% users.forEach(u => { %>
    <tr>
      <td><%= u.id %></td>
      <td><%= u.username %></td>
      <td><%= u.isAdmin ? "✔" : "✖" %></td>
      <td>
        <form method="post" action="/admin/users/delete/<%= u.id %>" onsubmit="return confirm('Are you sure?')">
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>

<h3>Add User</h3>
<form method="post" action="/admin/users/add">
  <input name="username" placeholder="Username" required />
  <input name="password" type="password" placeholder="Password" required />
  <label><input type="checkbox" name="isAdmin" /> Admin</label>
  <button class="btn btn-sm btn-success">Add</button>
</form>